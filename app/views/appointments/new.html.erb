<%= form_for @appointment, method: :post, url: user_appointments_path do |f| %>
    <%= f.label "Patient:"%>
    <%= f.collection_select :patient_id, Patient.all, :id, :name %><br>
    <br>
    <%= f.label "Doctor:"%>
    <%= f.collection_select :user_id, User.all, :id, :name %><br>
    <br>
    <%= f.label "Appointment Time:" %>
    <%= f.datetime_select :time %>
    <%= f.submit %>
<% end %>

