<%= form_for :patient, as: :post, url: user_appointments_path(current_user) do |f| %>
    <%= f.collection_select :appointments, Patient.all, :id, :name %><br>
    <br>
    <%= fields_for :appointment, Appointment.new do |ff|%>
         <%= ff.label "Appointment Time"%>
         <%= ff.datetime_select :time %>
    <% end %>
    <%= f.submit "Submit"%>
<% end %>
